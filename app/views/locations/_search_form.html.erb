<div class="col-md-6 col-md-offset-3">
  <%= form_for(Location.new, url: locations_path) do |f| %>

      <%= f.label :city %>
      <%= f.text_field :city, class: "form-control" %>

      <%= f.label :country %>
      <%= f.text_field :country, class: "form-control" %>

      <div class="unit_selector">
        <%= f.label :units_format %>
        <%= select :unit, :value, [['celsius', 'metric'], ['fahrenheit', 'imperial'], ['kelvin', '']] %>
      </div>

      <%= f.submit "Search", class: "btn btn-primary" %>
      <%= f.submit "I'm Feeling Lucky", class: "btn btn-primary" %>
  <% end %>
</div>